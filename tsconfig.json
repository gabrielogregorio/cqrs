{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/code/*": ["./src/code/*"],
      "@/commands/*": ["./src/commands/*"],
      "@/entity/*": ["./src/entity/*"],
      "@/envs/*": ["./src/envs/*"],
      "@/errors/*": ["./src/errors/*"],
      "@/events/*": ["./src/events/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/migrations/*": ["./src/migrations/*"],
      "@/models/*": ["./src/models/*"],
      "@/queries/*": ["./src/queries/*"],
      "@/query/*": ["./src/query/*"],
      "@/schemas/*": ["./src/schemas/*"]
    }
  },
  "include": ["src/**/*", "src/**.ts"]
}
