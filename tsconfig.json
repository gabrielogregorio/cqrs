{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/controllers/*": ["./src/controllers/*"],
      "@/factories/*": ["./src/factories/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/config/*": ["./src/config/*"],
      "@/models/*": ["./src/models/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/database/*": ["./src/database/*"],
      "@/errors/*": ["./src/errors/*"],
      "@/service/*": ["./src/service/*"],
      "@/logs/*": ["./src/logs/*"],
      "@/mock/*": ["./src/mock/*"],
      "@/locales/*": ["./src/locales/*"],
      "@/helpers/*": ["./src/helpers/*"]
    }
  },
  "include": ["src/**/*", "src/**.ts"]
}
